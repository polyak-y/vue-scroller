.Scroller
    background #fff
    display flex
    flex-direction column
    margin 0 auto
    border 1px solid #ddd
    border-radius 8px
    touch-action none
    
    .wrap
        width 320px
        display flex
        overflow hidden
        padding 16px

        @media(max-width: 780px)
            width: 100px
            padding-right 5px
        
    .pseudoScroll
        width 24px
        display flex
        justify-content center
        transform translateX(-10px)
        padding-top 23px
        padding-bottom 23px

        .track 
            width 5px
            height 100%
            background #D8E4EF
            position relative
            will-change transform

            .caret
                width 23px
                height 23px
                background #2462db
                border-radius 50%
                will-change transform
                position absolute
                top 0
                left calc((23px - 5px) / 2 * -1)
                cursor grab

                &.pressed
                    cursor grabbing

    .contentSignals
        width 100%
        overflow hidden
        will-change transform

        .wrapperSignals
            will-change transform

            .instrument
                height 73px
                display flex
                align-items center
                justify-content space-between
                border-bottom 1px solid #fff
                padding-left 8px
                padding-right 8px
                user-select none
                transition background .3s ease-in-out

                @media(max-width: 780px)
                    justify-content center

                &.hovered
                    background #F0F9FF

                    .title
                        color #3C73F1
                        transition color .3s ease-in-out

                .title
                    font-family 'Arial'
                    font-weight 400
                    font-size 16px
                    color #8C8C8C
                    transition color .3s ease-in-out

                    @media(max-width: 780px)
                        display none

                .image
                    height 50px
                    width auto

                    @media(max-width: 780px)
                       height 40px
