.SliderItem
    width 90%
    height 100%
    display flex
    justify-content center
    align-items center
    background #fff
    font-size 75px
    font-weight 700
    border 1px solid #ddd
    box-shadow 0 0 8px rgba(0,0,0,.1)
    border-radius 8px
    position absolute
    left 0
    top 0
    transform-style preserve-3d

    &:not(:first-child)
        transition transform var(--time) ease-in-out
        transition-delay var(--time)

    img 
        width 100%
        height 100%
        display block
        border-radius 8px
        object-fit cover
