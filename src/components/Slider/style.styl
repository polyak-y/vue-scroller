.Slider
    flex-grow 1
    min-height 100%
    position relative
    overflow hidden

    .animate
      min-height 100%
      perspective: 900px;

      .slideElement
        width 90%
        height 100%
        display: flex
        justify-content: center
        align-items: center
        background: #fff
        font-size: 75px
        font-weight: 700
        border: 1px solid #F2F2F2;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        border-radius: 16px;
        position: absolute
        left 0
        top 0
        transform-style: preserve-3d;

        &:not(:first-child)
          transition transform var(--time) ease-in-out
          transition-delay: var(--time);

    button
        width 50px
        height 150px
        background: linear-gradient(180deg, #719CFF 0%, #2A60DC 100%)
        position: absolute
        right 20px
        top 50%
        transform: translateY(-50%)
        outline 0
        border 0
        color #fff
        font-size 20px
        cursor pointer
        z-index 10

.animate-block {
  animation-duration: 1s;
  animation-fill-mode: both;
  animation-name: fadeOutLeft;
}

.animate-fadeIn {
  animation-duration: 1s;
  animation-fill-mode: both;
  animation-name: fadeOutLeft;
}

@keyframes fadeIn {
  from {
      opacity: 0;
  }

  to {
      opacity: 1;
  }
}

@keyframes fadeOutLeft {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }
}