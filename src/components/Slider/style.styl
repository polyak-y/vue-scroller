.Slider
    flex-grow 1
    min-height 100%
    position relative

    .animate
      min-height 100%
      perspective: 900px;
      
    .buttonImg
        width calc(var(--index) * 3.5)
        height calc(var(--index) * 3.5)
        position: absolute
        right 20px
        top 50%
        transform: translateY(-50%)
        cursor pointer
        z-index 10
        transition transform .3s ease-in-out


        &:hover 
          transform translateY(-50%) scale(1.1)
          
